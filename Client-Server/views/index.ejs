<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

    <body>

        <div>
            <%- include('./partials/nav.ejs') %>

                <h1><b>All Blogs</b></h1>

                <!-- EJS code -->
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach((blog)=> { %>
                        <div class="blog-list">
                            <a href="/blog/<%= blog._id %>">
                                <h3 class="blog-list-title">
                                    <%= blog.title %>
                                </h3>
                            </a>
                            <p>
                                <%= blog.snippet %>
                            </p>
                        </div>
                        <% }) %>
                            <% } %>
                                <div class="footer">
                                    <%- include('./partials/footer.ejs') %>
                                </div>
        </div>
    </body>

</html>